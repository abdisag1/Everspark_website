{
  "version": 2,
  "builds": [
    {
      "src": "server/vite.ts",
      "use": "@vercel/node"
    },
    {
      "src": "client/**",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "public"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "server/vite.ts"
    }
  ]
}
